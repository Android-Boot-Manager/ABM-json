{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for ABM device download assets",
  "type": "object",
  "properties": {
    "minAppVersion": {
      "type": "number"
    },
    "deviceInfo" : {
      "type": "object",
      "properties": {
        "codename": {
          "type": "string"
        },
        "blBlock": {
          "type": "string"
        },
        "sdBlock": {
          "type": "string"
        },
        "sdBlockP": {
          "type": "string"
        },
        "postInstallScript": {
          "type": "boolean"
        },
        "haveDtbo": {
          "type": "boolean"
        },
        "metaOnSd": {
          "type": "boolean"
        }
      },
      "required": [
        "codename",
        "blBlock",
        "sdBlock",
        "sdBlockP",
        "postInstallScript",
        "haveDtbo",
        "metaOnSd"
      ]
    },
    "bootloader" : {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "version": {
          "type": "number"
        },
        "sha256": {
          "type": "string"
        }
      },
      "required": [
        "url",
        "version"
      ]
    },
    "installScript" : {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "sha256": {
          "type": "string"
        }
      },
      "required": [
        "url"
      ]
    },
    "oses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "displayname": {
            "type": "string"
          },
          "version": {
            "type": "number"
          },
          "displayVersion": {
            "type": "string"
          },
          "scriptSha256": {
            "type": "string"
          },
          "creator": {
            "type": "string"
          },
          "scriptname": {
            "type": "string"
          },
          "rtype": {
            "type": "string"
          },
          "updateJson": {
            "type": "string"
          },
          "cmdline": {
            "type": "string"
          },
          "partitions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "size": {
                  "type": "string"
                },
                "isPercent": {
                  "type": "boolean"
                },
                "type": {
                  "type": "string"
                },
                "id": {
                  "type": "string"
                },
                "needUnsparse": {
                  "type": "boolean"
                }
              },
              "required": [
                "size",
                "isPercent",
                "type",
                "id",
                "needUnsparse"
              ]
            }
          },
          "inet": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                },
                "hash": {
                  "type": "string"
                }
              },
              "required": [
                "id",
                "desc",
                "url"
              ]
            }
          },
          "extraIdNeeded": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "blockIdNeeded": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "displayname",
          "version",
          "displayVersion",
          "creator",
          "scriptname",
          "rtype",
          "updateJson",
          "cmdline",
          "partitions",
          "inet",
          "extraIdNeeded",
          "blockIdNeeded"
        ]
      }
    }
  },
  "required": [
    "deviceInfo",
    "oses",
    "minAppVersion"
  ]
}
